{
    "manifest_version": 2,
    "name": "Grabber",
    "version": "1.0",

    "description": "Grab moving pictures.",
    "icons": {
        "48": "icons/grabber-48.png"
    },

    "permissions": [
        "activeTab", "downloads"
    ],

    "browser_action": {
        "default_icon": "icons/grabber-32.png",
        "default_title": "Grabber",
        "default_popup": "popup/popup_grab.html"
    }
}